<% if(!users.temp_password) { %>
  <tr>
    <td><%= users.id %></td>
    <td><%= users.first_name %> <%= users.last_name %></td>
    <td><%= users.email %></td>
    <td><%= users.username %></td>
    <% if(users.is_admin) { %>
      <td>Admin</td>
    <% } else { %>
      <td>User</td>
    <% } %>

    <% if(!users.temp_password) { %>
      <!-- highlight them so admin knows there is a request pending -->
      <!-- <td><a class="btn btn-success btn-sm" href="/admin/edit/<%= users.id %>" role="button">Edit User</a></td> -->
      <td><button class="btn btn-success">Edit</button></td>
    <% } %>
  </tr>
<% } else { %>
  <tr class="table-danger">
    <th scope="row"><%= users.id %></th>
    <td><%= users.first_name %> <%= users.last_name %></td>
    <td><%= users.email %></td>
    <td><%= users.username %></td>
    <% if(users.is_admin) { %>
      <td>Admin</td>
    <% } else { %>
      <td>User</td>
    <% } %>
    <% if(users.temp_password) { %>
      <!-- need to add button to edit user -->
