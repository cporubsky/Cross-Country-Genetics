<%- include('../layout/header', {title: title, user: user}) %>
<style>
form {
  padding-top: 10px;
}
</style>
<form class="col-md-6" action="/admin/create" method="POST">
<!-- Name -->
  <div class="form-group row">
    <label class="col-xs-2 col-form-label">Name</label>
    <div class="col-xs-10">
      <input class="form-control" type="text" name="name">
    </div>
  </div>
  <!-- Username -->
  <div class="form-group row">
    <label class="col-xs-2 col-form-label">Username</label>
    <div class="col-xs-10">
      <input class="form-control" type="search" name="username">
    </div>
  </div>
  <!-- Email -->
  <div class="form-group row">
    <label for="example-email-input" class="col-xs-2 col-form-label">Email</label>
    <div class="col-xs-10">
      <input class="form-control" type="email" name="email">
    </div>
  </div>
  <div class="form-group row">
    <!-- Role -->
    <label class="col-xs-2 col-form-label">Role</label>
      <div class="col-xs-10">
        <select class="form-control" name="role">
          <option value="1">Admin</option>
          <option value="0">User</option>
        </select>
      </div>
    </div>
<button class="btn btn-primary" type="submit">Create</button>
<a class="btn btn-danger" href="/admin" role="button">Back</a>
<% if(message) { %>
  <div class="alert alert-danger alert-dismissible fade in" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <%= message %>
  </div>
<% } %>
</form>
<%- include('../layout/footer') %>
