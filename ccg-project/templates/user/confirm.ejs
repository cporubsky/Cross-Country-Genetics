<%- include('../layout/header', {title: title, user: user}) %>
<style>
form {
  padding-top: 10px;
}
</style>
<form class="col-md-6" action="/user/confirm" method="POST">
  <!-- Username -->
  <div class="form-group row">
    <div class="col-xs-10">
      <input class="form-control" type="search" name="username" placeholder="Username" required>
    </div>
  </div>
  <!-- Temp Password -->
  <div class="form-group row">
    <div class="col-xs-10">
      <input class="form-control" type="search" name="temporary" placeholder="Temporary Password" required>
    </div>
  </div>
  <!-- First Password -->
  <div class="form-group row">
    <div class="col-xs-10">
      <input class="form-control" type="password" name="first" placeholder="Enter Password" required>
    </div>
  </div>
  <!-- Confirm Password -->
  <div class="form-group row">
    <div class="col-xs-10">
      <input class="form-control" type="password" name="second" placeholder="Confirm Password" required>
    </div>
  </div>
<button class="btn btn-primary" type="submit">Update</button>


<a class="btn btn-danger" href="/admin" role="button">Back</a>
<% if(message) { %>
  <div class="alert alert-danger alert-dismissible fade in" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <%= message %>
  </div>
<% } %>
</form>
<%- include('../layout/footer') %>
